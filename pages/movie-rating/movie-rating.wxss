.rating {
  display: flex;
    /* 靠左对齐 */
  flex-direction: row;
  margin: 10rpx 0;
}
.rating-star {
  display: inline-block;
  width: 80rpx;
  height: 16rpx;
  background-image: url(http://static.nipic.com/images/works_star_png24.png);
  background-repeat: no-repeat;
  background-size: cover;
}
.rating-average {
  margin-left: 20rpx;
  line-height: 20rpx;
  font-size: 20rpx;
}
