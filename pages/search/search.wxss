/* pages/search/search.wxss */
.search-input {
  flex: 1;
  color: #4a4a4a;
  font-size: 28rpx;
}
.search-cancel {
  width: 60rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 28rpx;
}
.movie-wrapper {
  padding: 0 30rpx;
  border-bottom: 1px solid #e9e9e9;
  box-sizing: border-box;
}
.movie-content {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 16rpx 0;
}
.movie-content .poster {
  width: 80rpx;
  height: 100rpx;
}
.total {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  width: 100%;
}
.name {
  width: 100%;
  font-size: 32rpx;
  color: #4a4a4a;
  font-weight: 700;
}
.desc {
  width: 100%;
  font-size: 28rpx;
  color: #aaa;
}